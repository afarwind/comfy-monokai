    "editorGroup.dropBackground": "#21252Bbf",
    "editorGroupHeader.noTabsBackground": "#21252B",
    "editorGroupHeader.tabsBackground": "#21252B",

    // tabs
    // 优化版
    "tab.activeBackground": "#254D75",
    "tab.hoverBackground": "#254D7588", // 背景不变
    "tab.hoverBorder": "#3A6A9A", // 仅用边框提示
    "tab.inactiveBackground": "#1F2A33",
    // 当前焦点tab的上边框色
    "tab.activeBorderTop": "#4A83E866",
    // 当前焦点tab的下边框色
    "tab.activeBorder": "#DDEFF199",

    // 影响tab中字体色
    "tab.activeForeground": "#DDEFF1",

    "tab.unfocusedInactiveBackground": "#21252B",
    "tab.inactiveForeground": "#8B9798",

    "tab.unfocusedActiveBackground": "#254D75",
    "tab.unfocusedActiveForeground": "#B8C4C3",

    "tab.border": "#181A1F",

    "tab.unfocusedActiveBorder": "#8b9798",
    "tab.unfocusedInactiveForeground": "#8b9798",

    // 编辑区域主背景色
    "editor.background": "#252A32",
    "editor.foreground": "#DDEFF1",
    "editorLineNumber.foreground": "#636D83",

    // 拖拽、光标移动后选中
    "editor.selectionBackground": "#254D75", // 主选区
    "editor.selectionForeground": "#ff6d7e", // 主选区字体颜色

    "editor.inactiveSelectionBackground": "#2E6FD644", // 非焦点编辑器

    // 拖选后自动高亮相同文本背景色（弱提示）
    "editor.selectionHighlightBackground": "#3A6A9A2E",
    // 拖选后自动高亮相同文本边框（弱提示）
    "editor.selectionHighlightBorder": "#568AF288",

    "editorCursor.background": "#ffffffc9",
    "editorCursor.foreground": "#568AF2",

    "editorBracketMatch.border": "#DDEFF1",
    "editorBracketMatch.background": "#515a6b",

    "editor.findMatchBackground": "#007acc60",
    "editor.findMatchBorder": "#DDEFF160",
    "editor.findMatchHighlightBackground": "#254D7560",

    // 点击获得焦点的单词（变量）背景色， 光标停在某个变量/函数名上
    "editor.wordHighlightBackground": "#61AFEF26",
    // 点击获得焦点的单词（变量）边框， 光标停在某个变量/函数名上
    "editor.wordHighlightBorder": "#61AFEF4D",
    // 选中变量的入口变量背景色
    "editor.wordHighlightStrongBackground": "#98C3793A",
    "editor.wordHighlightStrongBorder": "#98C37966",

    // 当前光标所在行的背景色
    "editor.lineHighlightBackground": "#3A6A9A33",
    // 当前光标所在行的上下边框色
    "editor.lineHighlightBorder": "#3A6A9A44",

    "editorWhitespace.foreground": "#3C4049",

    "editorIndentGuide.background": "#3C4049",

    "diffEditor.insertedTextBackground": "#00809B33",

    "editorWidget.background": "#21252B",

    "editorSuggestWidget.background": "#21252B",
    "editorSuggestWidget.border": "#181A1F",
    "editorSuggestWidget.selectedBackground": "#2C313A",

    "editorHoverWidget.background": "#21252B",
    "editorHoverWidget.border": "#181A1F",

    "peekView.border": "#568AF2",
    "peekViewResult.background": "#21252B",
    "peekViewResult.selectionBackground": "#2C313A",
    "peekViewTitle.background": "#1B1D23",
    "peekViewEditor.background": "#1B1D23",

    "statusBar.background": "#007acc",
    "statusBar.foreground": "#DDEFF1",

    "titleBar.activeBackground": "#21252B",
    "titleBar.activeForeground": "#9DA5B4",
    "titleBar.inactiveBackground": "#21252B",
    "titleBar.inactiveForeground": "#9DA5B4",

    "notification.background": "#21252B",

    "extensionButton.prominentForeground": "#DDEFF1",
    "extensionButton.prominentBackground": "#007acc",

    "pickerGroup.border": "#568AF2",
    "pickerGroup.foreground": "#DDEFF1",

    "terminal.foreground": "#DDEFF1",
    "terminal.ansiBlack": "#3a4449",
    "terminal.ansiBlue": "#FD971F",
    "terminal.ansiBrightBlack": "#6b7678",
    "terminal.ansiBrightBlue": "#FD971F",
    "terminal.ansiBrightCyan": "#61AFEF",
    "terminal.ansiBrightGreen": "#98C379",
    "terminal.ansiBrightMagenta": "#baa0f8",
    "terminal.ansiBrightRed": "#ff6d7e",
    "terminal.ansiBrightWhite": "#DDEFF1",
    "terminal.ansiBrightYellow": "#E6DB74",
    "terminal.ansiCyan": "#61AFEF",
    "terminal.ansiGreen": "#98C379",
    "terminal.ansiMagenta": "#baa0f8",
    "terminal.ansiRed": "#ff6d7e",
    "terminal.ansiWhite": "#DDEFF1",
    "terminal.ansiYellow": "#E6DB74",

    "debugToolBar.background": "#1B1D23",
    "welcomePage.buttonBackground": "#1B1D23",
    "welcomePage.buttonHoverBackground": "#9DA5B4",
    "walkThrough.embeddedEditorBackground": "#21252B"
  },
  "tokenColors": [
    {
      "settings": {
        "foreground": "#eeffffff",
        "background": "#263238ff"
      }
    },
    {
      "name": "Functions",
      "scope": [
        "meta.function-call.php",
        "support.function.builtin.rust",
        "support.function.C99",
        "support.function.core.ruby",
        "support.function.go",
        "support.function.js",
        "support.function.log.rust",
        "support.function.magic.php",
        "support.function.std.rust",
        "support.function.builtin.python"
      ],
      "settings": {
        "foreground": "#98C379"
      }
    },
    {
      "name": "Functions",
      "scope": [
        "entity.name.function",
        "meta.function-call.generic",
        "meta.function-call.method",
        "support.function.any-method",
        "support.function.misc",
        "variable.function"
      ],
      "settings": {
        "foreground": "#98C379"
      }
    },
    {
      "name": "Comment",
      "scope": "comment",
      "settings": {
        "foreground": "#75715E"
      }
    },
    {
      "name": "String",
      "scope": "string",
      "settings": {
        "foreground": "#E6DB74"
      }
    },
    {
      "name": "Template Definition",
      "scope": ["punctuation.definition.template-expression", "punctuation.section.embedded.coffee"],
      "settings": {
        "foreground": "#E06C75"
      }
    },
    {
      "name": "Number",
      "scope": "constant.numeric",
      "settings": {
        "foreground": "#baa0f8"
      }
    },
    {
      "name": "Built-in constant",
      "scope": "constant.language",
      "settings": {
        "foreground": "#baa0f8"
      }
    },
    {
      "name": "User-defined constant",
      "scope": ["constant.character", "constant.other"],
      "settings": {
        "foreground": "#baa0f8"
      }
    },
    {
      "name": "Variable",
      "scope": "variable",
      "settings": {
        "fontStyle": ""
      }
    },
    {
      "name": "Keyword",
      "scope": "keyword",
      "settings": {
        "foreground": "#E06C75"
      }
    },
    {
      "name": "Storage",
      "scope": "storage",
      "settings": {
        "fontStyle": "",
        "foreground": "#E06C75"
      }
    },
    {
      "name": "Storage type",
      "scope": "storage.type",
      "settings": {
        "fontStyle": "italic",
        "foreground": "#61AFEF"
      }
    },
    {
      "name": "Class name",
      "scope": "entity.name.class",
      "settings": {
        "fontStyle": "underline",
        "foreground": "#98C379"
      }
    },
    {
      "name": "Inherited class",
      "scope": "entity.other.inherited-class",
      "settings": {
        "fontStyle": "italic underline",
        "foreground": "#98C379"
      }
    },
    {
      "name": "Function name",
      "scope": "entity.name.function",
      "settings": {
        "fontStyle": "",
        "foreground": "#98C379"
      }
    },
    {
      "name": "Function argument",
      "scope": "variable.parameter",
      "settings": {
        "fontStyle": "italic",
        "foreground": "#FD971F"
      }
    },
    {
      "name": "Tag name",
      "scope": "entity.name.tag",
      "settings": {
        "fontStyle": "",
        "foreground": "#E06C75"
      }
    },
    {
      "name": "Tag attribute",
      "scope": "entity.other.attribute-name",
      "settings": {
        "fontStyle": "",
        "foreground": "#98C379"
      }
    },
    {
      "name": "Library function",
      "scope": "support.function",
      "settings": {
        "fontStyle": "",
        "foreground": "#61AFEF"
      }
    },
    {
      "name": "Library constant",
      "scope": "support.constant",
      "settings": {
        "fontStyle": "",
        "foreground": "#61AFEF"
      }
    },
    {
      "name": "Library class/type",
      "scope": ["support.type", "support.class"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#61AFEF"
      }
    },
    {
      "name": "Library variable",
      "scope": "support.other.variable",
      "settings": {
        "fontStyle": ""
      }
    },
    {
      "name": "Invalid",
      "scope": "invalid",
      "settings": {
        "background": "#E06C75",
        "fontStyle": "",
        "foreground": "#F8F8F0"
      }
    },
    {
      "name": "Invalid deprecated",
      "scope": "invalid.deprecated",
      "settings": {
        "background": "#baa0f8",
        "foreground": "#F8F8F0"
      }
    },
    {
      "name": "JSON String",
      "scope": "meta.structure.dictionary.json string.quoted.double.json",
      "settings": {
        "foreground": "#CFCFC2"
      }
    },
    {
      "name": "diff.header",
      "scope": ["meta.diff", "meta.diff.header"],
      "settings": {
        "foreground": "#75715E"
      }
    },
    {
      "name": "diff.deleted",
      "scope": "markup.deleted",
      "settings": {
        "foreground": "#E06C75"
      }
    },
    {
      "name": "diff.inserted",
      "scope": "markup.inserted",
      "settings": {
        "foreground": "#98C379"
      }
    },
    {
      "name": "diff.changed",
      "scope": "markup.changed",
      "settings": {
        "foreground": "#E6DB74"
      }
    },
    {
      "name": "GitGutter deleted",
      "scope": "markup.deleted.git_gutter",
      "settings": {
        "foreground": "#E06C75"
      }
    },
    {
      "name": "GitGutter inserted",
      "scope": "markup.inserted.git_gutter",
      "settings": {
        "foreground": "#98C379"
      }
    },
    {
      "name": "GitGutter changed",
      "scope": "markup.changed.git_gutter",
      "settings": {
        "foreground": "#E6DB74"
      }
    },
    {
      "name": "GitGutter ignored",
      "scope": "markup.ignored.git_gutter",
      "settings": {
        "foreground": "#75715E"
      }
    },
    {
      "name": "GitGutter untracked",
      "scope": "markup.untracked.git_gutter",
      "settings": {
        "foreground": "#75715E"
      }
    },
    {
      "scope": "constant.numeric.line-number.find-in-files - match",
      "settings": {
        "foreground": "#baa0f8A0"
      }
    },
    {
      "scope": "entity.name.filename.find-in-files",
      "settings": {
        "foreground": "#E6DB74"
      }
    },
    {
      "name": "Markup Quote",
      "scope": "markup.quote",
      "settings": {
        "foreground": "#F92672"
      }
    },
    {
      "name": "Markup Lists",
      "scope": "markup.list",
      "settings": {
        "foreground": "#E6DB74"
      }
    },
    {
      "name": "Markup Styling",
      "scope": "markup.bold, markup.italic",
      "settings": {
        "foreground": "#61AFEF"
      }
    },
    {
      "name": "Markup Inline",
      "scope": "markup.inline.raw",
      "settings": {
        "fontStyle": "",
        "foreground": "#FD971F"
      }
    },
    {
      "name": "Markup Headings",
      "scope": "markup.heading",
      "settings": {
        "foreground": "#98C379"
      }
    },
    {
      "name": "Markup Setext Header",
      "scope": "markup.heading.setext",
      "settings": {
        "fontStyle": "",
        "foreground": "#98C379"
      }
    },
    {
      "scope": "token.info-token",
      "settings": {
        "foreground": "#6796e6"
      }
    },
    {
      "scope": "token.warn-token",
      "settings": {
        "foreground": "#cd9731"
      }
    },
    {
      "scope": "token.error-token",
      "settings": {
        "foreground": "#f44747"
      }
    },
    {
      "scope": "token.debug-token",
      "settings": {
        "foreground": "#b267e6"
      }
    },
    {
      "name": "this.self",
      "scope": "variable.language",
      "settings": {
        "foreground": "#FD971F"
      }
    }
  ]
}
