    // 例如，当您用鼠标拖动选择代码时，背景就会显示这个颜色。
    "selection.background": "#254D75B3",
    "errorForeground": "#E06C75",

    "button.background": "#007acc",
    "button.foreground": "#DDEFF1",
    "button.hoverBackground": "#007acc",

    "dropdown.background": "#007acc",
    "dropdown.border": "#DDEFF1",
    "dropdown.foreground": "#DDEFF1",

    "input.background": "#273136",
    "input.border": "#273136",
    "input.foreground": "#DDEFF1",
    "input.placeholderForeground": "#545f62",
    "inputOption.activeBorder": "#545f62",
    "inputValidation.errorBackground": "#273136",
    "inputValidation.errorBorder": "#E06C75",
    "inputValidation.infoBackground": "#273136",
    "inputValidation.infoBorder": "#007acc",
    "inputValidation.warningBackground": "#273136",
    "inputValidation.warningBorder": "#ffb270",

    "scrollbar.shadow": "#273136",
    "scrollbarSlider.activeBackground": "#264F787F",
    "scrollbarSlider.background": "#264F787F",
    "scrollbarSlider.hoverBackground": "#264F787F",

    "badge.foreground": "#DDEFF1",
    "badge.background": "#007acc",

    "progressBar.background": "#3a4449",

    "list.hoverBackground": "#244866",
